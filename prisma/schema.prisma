generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  directUrl  = env("DIRECT_URL")
}

model Article {
  id          String    @id @default(cuid())
  title       String
  description String?
  url         String    @unique
  imageUrl    String?
  source      String
  category    String?
  publishedAt DateTime?
  createdAt   DateTime  @default(now())
}

model Rewrite {
  id        String   @id @default(cuid())
  articleId String   @unique
  content   String
  createdAt DateTime @default(now())
}
